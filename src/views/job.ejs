<%- include('parts/head', {page: "job", modal: false, form: true}) %>
  <body id="page-job">
    <%- include('parts/header', {title: 'Adicionar Novo Job'}) %>

    <div class="container flex animate-up delay-2">
      <main>
        <form id="form-job" method="POST" autocomplete="off">
          <fieldset>
            <legend>Dados do Job</legend>
            <div class="separator light"></div>

            <div class="input-wrapper">
              <label for="name">Nome do Job</label>
              <input type="text" id="name" name="name" />
            </div>

            <div class="input-group">
              <div class="input-wrapper">
                <label for="dailyHours"
                  >Quantas horas <br />
                  por dia vai dedicar ao job?</label
                >
                <input
                  type="number"
                  step="0.1"
                  id="dailyHours"
                  name="dailyHours"
                />
              </div>

              <div class="input-wrapper">
                <label for="totalHours"
                  >Estimativa de <br />
                  horas para esse Job?</label
                >
                <input type="number" id="totalHours" name="totalHours" />
              </div>
            </div>
          </fieldset>
        </form>
      </main>
      <aside class="card">
        <img
          src="/images/money-gray.svg"
          draggable="false"
          alt="Imagem de Dinheiro"
        />
        <p>Preencha os dados ao lado para ver o valor do projeto</p>
        <div class="button-group">
          <button
            class="button green"
            form="form-job"
            type="submit"
            title="Salvar Dados"
          >
            Salvar
          </button>
        </div>
      </aside>
    </div>
  </body>
</html>
